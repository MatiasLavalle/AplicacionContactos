<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Contactos</h1>
        </div>

        <div class="card-body">
            {{#if contacs}}
            <ul class="list-group">
                {{#each contacs}}
                <li class="list-group-item d-flex justify-content-between aling-items-center">
                    {{firstname}}
                    {{lastname}}
                    {{email}}
                    {{number}}
                    <a href="/delete-contact/{{@key}}" class="btn btn-danger">Delete</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
                <p> NO contacs yet </p>
            {{/if}}
        </div>

        <div class="card-footer">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="First Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Last Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="correo@correo.com" class="form-control">
                </div>
                <div class="form-group">
                    <input type="tel" name="number" placeholder="Phone Number" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">Add</button>

            </form>
        </div>

    </div>
</div>